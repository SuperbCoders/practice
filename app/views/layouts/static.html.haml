!!!
%html{:lang => "ru"}
  %head
    %title Практика – Делает работу врачей проще
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %link{:href => "https://fonts.googleapis.com/css?family=Lora:400,700|Noto+Serif:400,700|Open+Sans:400,600,700&subset=cyrillic", :rel => "stylesheet"}/

    = stylesheet_link_tag    'static/landing', media: 'all', 'data-turbolinks-track' => false
    = javascript_include_tag 'static/landing', 'data-turbolinks-track' => false
    = csrf_meta_tags

  %body._land
    .wrapper
      / .rect_1024
      .base
        .header
          .section_inner.clearfix
            .logo_block
              %a.logo{:href => "#"}
              %span.phone
                +7 800 123-45-67
            .header_controls
              -#%a.btn_v2.black_btn.auth_btn{:href => } Вход для клиентов
              = link_to("Вход для клиентов", doctor_cabinet_index_path, class: "btn_v2 black_btn auth_btn")
            %ul.land_menu
              %li
                = link_to("Зачем это", why_path, class: "nav_link")
              %li
                = link_to("Как работает", how_path, class: "nav_link")
              %li
                - if current_page?(:controller => 'static_pages', :action => 'landing')
                  %a.nav_link.scrollTo{:href => "#price_section"}
                    Цены
                - else
                  %a.nav_link{:href => root_path(scroll_to: 'price_section')}
                    Цены
        = yield
