%html{:lang => "ru", 'ng-app' => "practice.doctor"}
  %head
    %title Practic профиль

    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/

    = stylesheet_link_tag    'doctor', media: 'all', 'data-turbolinks-track' => false
    = javascript_include_tag 'doctor', 'data-turbolinks-track' => false
