  %body.controls_mod
    .wrapper
      .base.controls_mod
        = render 'doctor/shared/header'

        %div(ui-view)

        = render 'doctor/shared/aside_menu'

      = render 'doctor/shared/popups/add_patient_form'
      = render 'doctor/shared/popups/patient_info_form'