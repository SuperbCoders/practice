.sub_header_holder
  .section_inner.clearfix
    .fl.header_search_form_holder
      .header_search_form
        %form{:action => "#", :novalidate => "novalidate"}
          %label.input_w.search_input_w
            %input.input_v2.form_input{:placeholder => "Поиск пациента", 'ng-model' => "filters.name"}/
            %button.search_btn
    .fl.mob_hidden.read_mode
      %a.btn_v1.add_card_btn.yellow_black_btn{:href => "", 'ui-sref' => "patients.add"} Создать новую карточку
    .patient_edit_controls.edit_mode
      %a.btn_v1.green_btn.save_card_btn.saveCard_{:href => "card_edit.html"} Написать в карту
    .fr.filter_toggle_holder
      .mb.read_mode
        %form{:action => "#", :novalidate => "novalidate"}
          %ul.filter_toggle.filter_toggle_v1

            / Все
            %li.filter_t_item{'ng-click' => "filters.approved = undefined; filters.archivated = false;fetch()"}
              %label.filter_t_box
                %input.hidden_input{:checked => "checked", :name => "patient_filter", :type => "radio"}/
                %span.filter_t_name
                  Все
                  %span.dt_hidden пациенты

            / Ожидают подтверждения
            %li.filter_t_item{'ng-click' => "filters.approved = false; filters.archivated = false;fetch()"}
              %label.filter_t_box
                %input.hidden_input{:name => "patient_filter", :type => "radio"}/
                %span.filter_t_name
                  %span.dt_hidden Заявки на прием
                  %span.mob_hidden Заявки на прием

            / Записаны врачом
            %li.filter_t_item{'ng-click' => "filters.approved = false; filters.archivated = false;fetch()"}
              %label.filter_t_box
                %input.hidden_input{:name => "patient_filter", :type => "radio"}/
                %span.filter_t_name
                  %span.dt_hidden Записаны на прием
                  %span.mob_hidden Записаны на прием

            / В архиве
            %li.filter_t_item.mob_hidden{'ng-click' => "filters.approved = undefined; filters.archivated = true;fetch()"}
              %label.filter_t_box
                %input.hidden_input{:name => "patient_filter", :type => "radio"}/
                %span.filter_t_name В архиве
      .mb.edit_mode
        %ul.avatar_catcher.avatarCatcher