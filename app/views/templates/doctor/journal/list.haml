.sub_header_holder
  .section_inner.clearfix
    .patient_controls
      .fl
        .mb.rel_holder
          %a.go_back_btn.middle_mod{:href => "", 'onClick'=>"javascript:history.go(-1);"}
      .page_title Написать в карту
      .fr.filter_toggle_holder
        .mb.edit_mode
          %ul.avatar_catcher.avatarCatcher

.patient_edit_block
  %ul.patient_notes{'ng-repeat' => "journal in vm.journals"}
    %li.patient_note
      .patient_note_date {{journal.date}}
      .patient_note_block
        .card_menu_w
          .drop_down_btn
            %span
          .drop_down_w
            %ul.drop_down_menu
              %li.drop_down_item
                %a.gl_link{:href => "", 'ui-sref' => "journal.edit({journal_id: journal.id})"}
                  %span Редактировать
              %li.drop_down_item
                %a.gl_link{:href => "", "ng-click" => "journal.$delete()"}
                  %span Удалить
        %dl.note_lines{'ng-repeat' => "record in journal.journal_records"}
          %dt
            {{vm.show_tag(record.tag)}}
            %input{'ng-change' => 'vm.attach_on_load_end(journal)', id: "{{journal.id}}_{{record.id}}_attach" , :accept => "image/jpeg,image/png,image/gif", :autocomplete => "off", :type => "file", 'ng-model' => 'journal.new_attach', hidden: true}(base-sixty-four-input)
            %a.gl_link{:href => "", "ng-click" => "vm.attach_to_journal(journal, record)"}
              %span Добавить файл
          %dd
            %p {{record.body}}
            %ul.note_img_list
              %li{'ng-repeat' => "attachment in record.attachments"}
                %a.note_img.fancybox{href: "{{attachment.file}}"}
                  %img{'ng-src' => "{{attachment.file}}"}
