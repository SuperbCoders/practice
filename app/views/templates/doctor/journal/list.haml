.patient_edit_block
  %ul.patient_notes{'ng-repeat' => "journal in vm.journals"}
    %li.patient_note
      .patient_note_date {{journal.created_at}}
      .patient_note_block
        .card_menu_w
          .drop_down_btn
            %span
          .drop_down_w
            %ul.drop_down_menu
              %li.drop_down_item
                %a.gl_link{:href => "#"}
                  %span Редактировать
              %li.drop_down_item
                %a.gl_link{:href => "#"}
                  %span Добавить файл
              %li.drop_down_item
                %a.gl_link{:href => "#"}
                  %span Удалить
        %dl.note_lines{'ng-repeat' => "record in journal.journal_records"}
          %dt {{record.tag}}
          %dd
            %p {{record.body}}
