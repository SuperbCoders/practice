.box
  .box-header.with-border
    %h3.box-title.lead Врачи
    .box-tools.pull-right
      .input-group.input-group-sm
        %input.form-control{:type => "text", :placeholder => "Поиск", "ng-change" => "vm.search()", "ng-model" => "vm.query", "ng-model-options" => "{debounce: 500}"}
  .box-body.no-padding
    .row
      .col-xs-12
        %table.table.table-condensed.table-striped.table-hover.table-bordered
          %thead
            %td Имя
            %td email
            %td Дата регистрации
            %td Активен
            %td Сайт
            %td Подписка
            %td
          %tbody
            %tr{'dir-paginate' => "doctor in vm.doctors | itemsPerPage: vm.items_limit"}
              %td {{ doctor.name }}
              %td {{ doctor.email }}
              %td {{ doctor.created_at | defaultDateFormat }}
              %td {{ doctor['active?'] | yesNo: true }}
              %td {{ doctor.profile | yesNo: 'profile_open' }}
              %td Триал
              %td
                %a.btn.btn-sm.btn-flat.btn-default{:href => "", "ng-click" => "vm.signInAsDoctor(doctor)"}
                  %i.fa.fa-sign-in
                %a.btn.btn-sm.btn-flat.btn-default{:href => "", "ng-click" => "vm.remove(doctor)"}
                  %i.fa.fa-trash
  .box-footer
    .col-xs-12
      %dir-pagination-controls
